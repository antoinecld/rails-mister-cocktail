<h2>Le <%=@cocktail.name%> :</h2>

<%= link_to "Add a dose",  new_cocktail_dose_path(@cocktail) %>
<h4>Les doses:</h4>
<ul><%@cocktail.doses.each do |dose|%>
  <li>
    <%= dose.description %> |
    <%= dose.ingredient.name %>
    <%= link_to "Delete dose", dose_path(dose), method: :delete %>
  </li>
<% end %>
</ul>
<p><%= link_to "Back", cocktails_path %></p>

<%= cl_image_tag @cocktail.photo, height: 300, width: 400, crop: :fill %>


