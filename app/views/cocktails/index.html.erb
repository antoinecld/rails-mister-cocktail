<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url(<%=cl_image_path("banner_ib2phf.jpg")%>);">
  <div class="banner-content">
    <h1>Cocktail</h1>
    <div> <%= link_to "Add a cocktail", new_cocktail_path , {class: "btn btn-treehouse"} %> </div>
  </div>
</div>


<div class="container">
  <div class="row">
    <% @cocktails.each do |cocktail| %>
      <div class="col-xs-12 col-sm-6 col-md-4 card">
        <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url(<%=cocktail.photo%>);">
        <h3><%= cocktail.name %></h3>
        <p><%= link_to '', cocktail_path(cocktail), class:"card-link" %></p>
        </div>

        <ul class="list-unstyled">
          <%= link_to cocktail_path(cocktail), method: :delete do %>
          <li>
            <i class="fa fa-trash-o" aria-hidden="true"></i>
          </li>
        </ul>

        <% end %>
      </div>
    <% end %>
  </div>
</div>







